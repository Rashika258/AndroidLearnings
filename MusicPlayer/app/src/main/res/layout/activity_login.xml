<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/login_head_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textSize="40sp"
        android:paddingLeft="20dp"
        android:textAlignment="textStart"
        android:fontFamily="sans-serif"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        tools:ignore="RtlCompat" />
    <ImageView
        android:id="@+id/iconn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/login_head_textview"
        android:src="@drawable/musicnote"
        tools:ignore="InvalidId,MissingConstraints"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="136dp" />

    <EditText
        android:id="@+id/login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconn"
        android:background="@drawable/input_text"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="normal"
        android:hint="Enter your name"
        android:textColorHint="@color/white"
        android:layout_marginRight="20dp"
        tools:ignore="InvalidId" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_name"
        android:background="@drawable/input_text"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:fontFamily="monospace"
        android:textStyle="normal"
        android:hint="Enter password"
        android:textColorHint="@color/white"
        android:layout_marginRight="20dp"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/attemptsTv"
        android:layout_below="@+id/login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of attempts remaining : 5"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="18dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:layout_below="@+id/attemptsTv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/robotoregular"
        android:padding="20dp"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:background="@drawable/btn_background"
        />

    <TextView
        android:id="@+id/registerUserTv"
        android:layout_below="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New User? Sign up here"
        android:textColor="@color/white"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="30dp"
        android:padding="10dp"
        />

</RelativeLayout>