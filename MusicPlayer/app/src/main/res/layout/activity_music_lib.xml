<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bb"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicLibActivity">

    <TextView
        android:id="@+id/text_music"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Music Library"
        android:textSize="60sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        tools:ignore="InvalidId"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/musicLibraryTv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_library_music_24"
        android:layout_below="@+id/text_music"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        tools:ignore="UnknownId" />

    <TextView
        android:id="@+id/text_subscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Subscription"
        android:textSize="60sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_below="@+id/musicLibraryTv"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        tools:ignore="InvalidId,UnknownId"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/subscriptionTv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_library_music_24"
        android:layout_below="@+id/text_subscription"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        tools:ignore="UnknownId" />

</RelativeLayout>