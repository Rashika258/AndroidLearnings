<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_background"
    tools:context=".HomeActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wynk Zeek"
        android:id="@+id/head"
        android:textStyle="bold"
        android:textSize="60sp"
        android:fontFamily="@font/handlee"
        android:textColor="@color/splash_text"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/iconn"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/head"
        android:src="@drawable/musicnote"
        tools:ignore="InvalidId,MissingConstraints"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="136dp" />

    <Button
        android:id="@+id/home_register_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iconn"
        android:text="NEW USER? REGISTER WITH US"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/home_text"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/robotoregular"
        android:padding="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />

    <Button
        android:id="@+id/home_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/home_register_button"
        android:textStyle="bold"
        android:text="EXISTING USER ? LOGIN"
        android:textColor="@color/home_text"
        android:fontFamily="@font/robotoregular"
        android:background="@drawable/btn_background"
        android:textSize="18sp"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

</RelativeLayout>